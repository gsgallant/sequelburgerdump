
<div class="container">
	<div class="row">
		<div class="col-xs-6 text-center">
			<h4 align="center" class="rowhead"><u>Your Order Is Ready</u></h4>
			<div class="row">
			  <!--loop over the burger object. When devoured=0 fill left column(which means not devoured in this context)-->
			  {{#each burger}}
			  	{{#unless this.devoured}}
				
					<div class="col-xs-7 text-center">
						<h5 align="left">{{this.burger_name}}</h5>
					</div>
					
					<div class="col-xs-3 text-center">
						<form method="POST" action="/devour?_method=PUT">
							<br>
							<button type="submit" name="burgerid" value={{this.id}} class="btn btn-danger btn-xs">Devour it!</button>
						</form>
					</div>
				
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		
		<!-- fill the left column with devoured burgers (devour=1)-->
		<div class="col-xs-6 text-center">
			<h4 align="center" class="rowhead"><u>You devoured it!&nbsp;&nbsp;&nbsp;<font color="red">The ER is WAITING!</font></u></h4>
			  
			  {{#each burger}}
			  	{{#if this.devoured}}
			  		<div class="col-xs-4 text-center">
						<form method="POST" action="/another?_method=PUT">
							<br>
							<button type="submit" name="burgerid" value={{this.id}} class="btn btn-danger btn-xs">Build Another</button>
						</form>
					</div>
			  		<div class="col-xs-6">
			  			<h5 align="left">{{this.burger_name}}</h5>
					</div>
					

				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>
